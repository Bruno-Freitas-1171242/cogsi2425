Vagrant.configure("2") do |config|
  # Define the base box (replace with the one you're using)
  config.vm.box = "ubuntu/bionic64"

  # Define shared folder (host to guest)
  config.vm.synced_folder ".", "/vagrant"

  # Use VirtualBox as the provider
  config.vm.provider "virtualbox" do |vb|
    vb.name = "VirtualBoxVM" # Name of the VM
    vb.memory = "1024"       # Set memory size
    vb.cpus = 2              # Set number of CPUs
  end

  # Optional: Configure a private network (change IP as needed)
  config.vm.network "private_network", type: "dhcp"
end
